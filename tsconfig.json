{
	"compilerOptions": {
		"module": "commonjs",
		"declaration": true,
		"noImplicitAny": false,
		"removeComments": false,
		"noLib": false,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"target": "es2018",
		"sourceMap": true,
		"allowJs": false,
		"outDir": "./dist",
		"rootDirs": [
			"./lib",
			"./test"
		],
		"resolveJsonModule": true,
		"esModuleInterop": true
	},
	"include": [
		"lib/**/*.ts",
		"test/**/*.ts"
	],
	"exclude": [
		"node_modules"
	]
}
